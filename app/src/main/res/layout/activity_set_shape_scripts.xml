<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_shape_scripts"
    android:rowCount="6"
    android:columnCount="6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.stanford.cs108.bunnyworld.SetShapeScripts">
    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:text="on click" />

    <Spinner
        android:id="@+id/chooseOnClickAction"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:spinnerMode="dialog"
        android:prompt="@string/prompt_action">
    </Spinner>

    <Spinner
        android:id="@+id/chooseOnClickModifier"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:spinnerMode="dialog"
        android:prompt="@string/prompt_modifier">
    </Spinner>

    <Button
        android:layout_row="4"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:onClick="addOnClick"
        android:text="ADD" />

    <Button
        android:layout_row="4"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:onClick="deleteOnClick"
        android:text="DELETE" />

    <ListView
        android:id="@+id/onClickListView"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="fill">
    </ListView>



    <TextView
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:text="on enter" />

    <Spinner
        android:id="@+id/chooseOnEnterAction"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:spinnerMode="dialog"
        android:prompt="@string/prompt_action">
    </Spinner>

    <Spinner
        android:id="@+id/chooseOnEnterModifier"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:spinnerMode="dialog"
        android:prompt="@string/prompt_modifier">
    </Spinner>

    <Button
        android:layout_row="4"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:onClick="addOnEnter"
        android:text="ADD" />

    <Button
        android:layout_row="4"
        android:layout_column="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:onClick="deleteOnEnter"
        android:text="DELETE" />

    <ListView
        android:id="@+id/onEnterListView"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill">
    </ListView>



    <TextView
        android:layout_row="0"
        android:layout_column="4"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:text="on drop" />

    <Spinner
        android:id="@+id/chooseOnDropShape"
        android:layout_row="1"
        android:layout_column="4"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:spinnerMode="dialog"
        android:prompt="@string/prompt_shape">
    </Spinner>

    <Spinner
        android:id="@+id/chooseOnDropAction"
        android:layout_row="2"
        android:layout_column="4"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:spinnerMode="dialog"
        android:prompt="@string/prompt_action">
    </Spinner>

    <Spinner
        android:id="@+id/chooseOnDropModifier"
        android:layout_row="3"
        android:layout_column="4"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:spinnerMode="dialog"
        android:prompt="@string/prompt_modifier">
    </Spinner>

    <Button
        android:layout_row="4"
        android:layout_column="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:onClick="addOnDrop"
        android:text="ADD" />

    <Button
        android:layout_row="4"
        android:layout_column="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:onClick="deleteOnDrop"
        android:text="DELETE" />

    <ListView
        android:id="@+id/onDropListView"
        android:layout_row="5"
        android:layout_column="4"
        android:layout_columnSpan="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="fill">
    </ListView>

</GridLayout>
